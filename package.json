{
  "name": "bongohive-express-server",
  "version": "1.0.0",
  "description": "This is the boilerplate for all bongohive express servers",
  "main": "index.js",
  "author": "mbuyu makayi",
  "license": "MIT",
  "scripts": {
    "build": "babel --presets node8 src -d dist --source-maps",
    "serve": "NODE_ENV=production node dist/server.js",
    "start": "NODE_ENV=development babel-node src/server.js ",
    "dev": "DEBUG=server:debug NODE_ENV=development nodemon src/server.js --exec babel-node ",
    "test": "DEBUG=server:debug NODE_ENV=test mocha --timeout 300000 --require babel-core/register --reporter spec --exit   tests/**/*.js --exec babel-node",
    "coverage": "mocha --coverage --runInBand --verbose",
    "eslint": "eslint src/**/*.js --ignore-pattern \"node_modules/\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "babel": {
    "presets": [
      "node8"
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "babel-cli": "^6.26.0",
    "babel-preset-node8": "^1.2.0",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.0",
    "nodemon": "^1.18.10",
    "superagent": "^4.1.0",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "config": "^3.0.1",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "helmet": "^3.15.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.35",
    "mongoose": "^5.4.13",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "redis": "^2.8.0",
    "swagger-ui-express": "^4.0.2",
    "winston": "^3.2.1"
  }
}
